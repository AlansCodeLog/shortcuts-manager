{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*":["../node_modules"],
      "@/*": ["src/*"],
      "@lib/*": ["../src/*"],
      "@utils/*": [ "../node_modules/@alanscodelog/utils/dist/*"],
    },
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "typeRoots": ["src/types"]
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "global.d.ts"]
}
